<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
			Create a New Campground
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control" type ="text" id="name" name="name" placeholder="Name" required>
				</div>
				<div class="form-group">
					 <label for="image">Image Url</label>
					<input class="form-control" type ="text" id="image" name="image" placeholder="Image URL" required>
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" type ="number" id="price" name="price" placeholder="Price" min="0.01" step="0.01" required>
				</div>
				<div class="form-group">
					 <label for="description">Description</label>
					<input class="form-control" type ="text" id="description" name="description" placeholder="Description" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-success">Submit</button>
				</div>		
			</form>
			
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>



<%- include ("../partials/footer") %>