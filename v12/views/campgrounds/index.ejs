<%- include ("../partials/header") // ../ = back one folder!%>

<div class="container">
	<header class="jumbotron">
		<div class ="container">
			<h1>
			<span class="glyphicon glyphicon-tent"></span> Welcome to YelpCamp!
			<p>
				View our hand-picked discgolf courses in Estonia
			</p>
			</h1>
			<p>
				<a class="btn btn-success btn-lg" href="/campgrounds/new">Add new discgolf course</a>
			</p>
			<p>
              <form action="/campgrounds" method="GET" class="form-inline" id="campground-search">
                <div class="form-group">
				  <input type="text" name="search" placeholder="Course search..." class="form-control">
                </div>
              </form>
             </p>
		</div>
	</header>

	<div class="row text-center display-flex">
		<% campgrounds.forEach((campground) => { %>
    	<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= campground.image %>">
				<div class="caption">
					<h4>
					<%= campground.name  %>
					</h4>
				</div>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
	<% }); %> 
	</div>
</div>

